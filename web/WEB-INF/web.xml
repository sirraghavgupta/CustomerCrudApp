<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Customer App</display-name>

    <servlet>
        <servlet-name>CreateCustomer</servlet-name>
        <servlet-class>com.raghav.controllers.CreateCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCustomer</servlet-name>
        <url-pattern>/CreateCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteCustomer</servlet-name>
        <servlet-class>com.raghav.controllers.DeleteCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomer</servlet-name>
        <url-pattern>/DeleteCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateCustomer</servlet-name>
        <servlet-class>com.raghav.controllers.UpdateCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCustomer</servlet-name>
        <url-pattern>/UpdateCustomer</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetCustomer</servlet-name>
        <servlet-class>com.raghav.controllers.GetCustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCustomer</servlet-name>
        <url-pattern>/GetCustomer</url-pattern>
    </servlet-mapping>

</web-app>